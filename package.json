{
  "name": "@hiddenability/opinionated-defaults",
  "description": "Opinionated default configurations for webdev tools.",
  "version": "0.1.29",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HiddenAbilitree/opinionated-defaults.git"
  },
  "bin": "dist/cli/index.mjs",
  "type": "module",
  "scripts": {
    "test-cli": "bun dist/cli/index.mjs",
    "build": "bun test && bun ./scripts/build.ts",
    "prepack": "bun test && bun ./scripts/build.ts",
    "lint": "oxlint && eslint_d",
    "lint:fix": "oxlint --fix --fix-suggestions && eslint_d --fix",
    "format": "prettier . -c",
    "format:fix": "prettier . -w"
  },
  "exports": {
    "./eslint": {
      "import": {
        "default": "./dist/eslint/index.mjs",
        "types": "./dist/eslint/index.d.ts"
      }
    },
    "./prettier": {
      "import": {
        "default": "./dist/prettier/index.mjs",
        "types": "./dist/prettier/index.d.ts"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.37.0",
    "@next/eslint-plugin-next": "^15.5.4",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-oxlint": "^1.19.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-prefer-arrow-functions": "^3.9.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-solid": "^0.14.5",
    "eslint-plugin-turbo": "^2.5.8",
    "eslint-plugin-unicorn": "^61.0.2",
    "jiti": "^2.6.1",
    "lodash": "^4.17.21",
    "oxlint": "^1.19.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "0.6.14",
    "typescript-eslint": "^8.45.0"
  },
  "devDependencies": {
    "@hiddenability/opinionated-defaults": "link:@hiddenability/opinionated-defaults",
    "@types/bun": "^1.2.23",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.7.0",
    "consola": "^3.4.2",
    "eslint_d": "^14.3.0",
    "oxc-transform": "^0.94.0"
  },
  "optionalDependencies": {
    "@hiddenability/opinionated-defaults-darwin-arm64": "^0.1.27",
    "@hiddenability/opinionated-defaults-darwin-x64": "^0.1.27",
    "@hiddenability/opinionated-defaults-linux-arm64": "^0.1.27",
    "@hiddenability/opinionated-defaults-linux-x64": "^0.1.27",
    "@hiddenability/opinionated-defaults-win-arm64": "^0.1.27",
    "@hiddenability/opinionated-defaults-win-x64": "^0.1.27"
  }
}
